---
extends: default

rules:
  line-length:
    max: 200
    level: warning

  indentation:
    spaces: 2
    indent-sequences: true

  comments:
    min-spaces-from-content: 1

  comments-indentation: {}

  document-start: disable

  truthy:
    allowed-values: ['true', 'false', 'yes', 'no']

ignore: |
  .venv/
  venv/
  cdk.out/
  htmlcov/
  .pytest_cache/
