[flake8]
# Maximum line length
max-line-length = 127

# Maximum complexity
max-complexity = 10

# Exclude directories
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    cdk.out,
    .pytest_cache,
    htmlcov

# Ignore specific error codes
ignore =
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    W504   # line break after binary operator

# Select error codes to check
select = E,W,F,C

# Per-file ignores
per-file-ignores =
    __init__.py:F401

# Show source code for errors
show-source = True

# Show error statistics
statistics = True

# Count errors
count = True
